<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <title><%= yield(:title) || t('conference') %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag "https://use.typekit.net/vof3vrp.js" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto:500|Titillium+Web:400,600" %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= yield(:head) %>

    <meta property="og:title" content="<%= yield(:title) || t('conference') %>" />
    <meta name="twitter:title" content="<%= yield(:title) || t('conference') %>">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:image" content="<%= image_url 'twitter-card.png' %>">
    <% if meta_description %>
    <meta property="og:description" content="<%= meta_description %>" />
    <meta name="twitter:description" content="<%= meta_description %>">
    <meta name="description" content="<%= meta_description %>">
    <% end %>
  </head>

  <body>

    <div class="full-column">
      <div class="center-column">
        <ul id="menu">
          <li class="star">
            <a href="/" >
              <span class="description">sessionizer home</span><br />
              <%= image_tag 'logos/minnebar-horizontal.svg', alt: 'Sessionizer Home' %>
            </a>
          </li>
          <li class="donate">
            <a class="button" href="http://minnestar.org/donate">
              Donate
            </a>
          </li>
          <li class="bar">
            <a href="https://minnestar.org/sponsors/become-a-sponsor/">
              Sponsor
            </a>
          </li>
          <li class="bar">
            <a href="https://minnestar.org/community/volunteer/">
              Volunteer
            </a>
          </li>
        </ul>
        <div class="clearboth"></div>

      </div><!-- / center-column -->
    </div><!-- / full-column -->

    <div class="center-column">
      <div class="page-heading">
        <div class="clear"></div>
        <div id="flash_message_placeholder"></div>
        <%- [:error, :notice, :success].each do |name| -%>
          <%= content_tag :div, flash[name], :id => "flash_#{name}" if flash[name] %>
        <%- end -%>

        <div class="clear"></div>

        <% if !logged_in? && !current_page?(new_login_path) && !current_page?(login_path) %>
          <p class="participant-links">
            <%= link_to 'Log in', new_login_path %>
            <span>&nbsp;|&nbsp;</span>
            <%= link_to 'Forgot Password?', new_password_reset_path %>
          </p>
        <% end %>


        <% if logged_in? %>
          <p class="participant-links">
            <%= link_to "Welcome #{current_participant.name}", [:edit, current_participant]  %>
            <span>&nbsp;|&nbsp;</span>
            <%= link_to 'Log out', logout_path, :method => 'delete' %>
          </p>
        <% end %>

        <div class="clear"></div>

        <%- if show_title? -%>
          <h1 class="page-title"><%=h yield(:title) %> <span class="edit"><%= yield :edit %></span></h1>
        <%- end -%>
      </div>

      <%= yield %>

      <%= render :partial => 'layouts/javascript' %>
    </div>
    <%= render :partial => 'shared/ga' %>
    <%= render :partial => 'shared/footer' %>
  </body>
</html>
